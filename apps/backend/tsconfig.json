{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2024",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@env": ["./src/services/env.service"],
      "services/*": ["./src/services/*"],
      "decorators/*": ["./src/decorators/*"],
      "guards/*": ["./src/guards/*"],
      "@thevoid/database/*": [
        "./node_modules/@thevoidcommunity/the-void-database/*"
      ],
      "database": [
        "./node_modules/@thevoidcommunity/the-void-database/database"
      ],
      "database/*": [
        "./node_modules/@thevoidcommunity/the-void-database/database/*"
      ],
      "routes": ["./src/routes"],
      "routes/*": ["./src/routes/*"],
      "errors/*": ["./src/errors/*"],
      "types": [
        "./src/types",
        "./node_modules/@thevoidcommunity/the-void-database/types",
        "./node_modules/@thevoidcommunity/the-void-database/settings"
      ],
      "types/*": [
        "./src/types/*",
        "./node_modules/@thevoidcommunity/the-void-database/types/*",
        "./node_modules/@thevoidcommunity/the-void-database/settings/*"
      ],
      "api": ["src/api"],
      "api/*": ["src/api/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "bad-fockarch"
  ]
}

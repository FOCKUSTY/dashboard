{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./",
        "plugins": [
            { "name": "next" }
        ],
        "paths": {
            "ui/*": ["./src/components/*"],
            "service/*": ["./src/service/*"],
            "locale/*": ["./src/locale/*"],
            "types/*": ["./src/types/*"],
            "pages/*": ["./src/pages/*"],
            "api/*": ["./src/api/*"],
            "utils/*": ["./src/utils/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
, "src/locale/index.tx"    ],
    "exclude": [
        "node_modules"
    ]
}